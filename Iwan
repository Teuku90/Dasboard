                .withFailureHandler(err => Swal.fire('Error', err.message, 'error'))
                .always(() => {
                    this.disabled = false;
                    this.textContent = "Kirim Notif ke Pemohon";
                })
                .sendAdminFinalNotification(docInput.value);
        });
    });
